<div class="lightboxTitle">
  <div class="lightboxBack">
    <% if @documents.size == 1 %>
      <%= link_to "Close [X]", catalog_path(@documents.first.id), {:class => "lightboxLink", :name => 'email'} %>
    <% else %>
      <%= link_to "Close [X]", folder_index_path, {:class => "lightboxLink", :name => 'email'}%>
    <% end %>
  </div>
  Email This
</div>

<% form_tag '/send_email_records', :id => 'email_form', :method => :post do %>
  <%= label_tag(:to, "Email:") %><br/>
  <%= text_field_tag :to %><br/>
  <%= label_tag(:message, "Message:") %><br/>
  <%= text_area_tag :message %><br/>
  <% @documents.each do |doc| %>
    <%=hidden_field_tag "id[]", doc.get(:id)%>
  <% end %>
  <%=hidden_field_tag :style, 'email'%>
  <%= submit_tag "Send" %>
<% end %>
